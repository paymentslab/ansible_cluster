# ******************************************************************
# Cobbler managed dhcpd.conf file
#
# generated from cobbler dhcp.conf template ($date)
# Do NOT make changes to /etc/dhcpd.conf. Instead, make your changes
# in /etc/cobbler/dhcp.template, as /etc/dhcpd.conf will be
# overwritten.
#
# ******************************************************************

ddns-update-style interim;

allow booting;
allow bootp;

ignore client-updates;
set vendorclass = option vendor-class-identifier;

subnet {{hostvars[groups['cobbler'][0]].ansible_eth0.ipv4.network}} netmask {{hostvars[groups['cobbler'][0]].ansible_eth0.ipv4.netmask}} {
     option routers             {{hostvars[groups['cobbler'][0]].ansible_eth0.ipv4.address}};
     option domain-name-servers {{hostvars[groups['cobbler'][0]].ansible_eth0.ipv4.address}};
     option subnet-mask         {{hostvars[groups['cobbler'][0]].ansible_eth0.ipv4.netmask}};
     range dynamic-bootp        {{ cobbler_temporary_range }};
     filename                   "/pxelinux.0";
     default-lease-time         21600;
     max-lease-time             43200;
     next-server                $next_server;
}

